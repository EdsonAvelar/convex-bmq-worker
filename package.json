{
  "name": "convex-bullmq-worker",
  "version": "1.0.0",
  "description": "BullMQ Worker standalone para processamento de filas (webhooks, emails, etc)",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "health": "curl http://localhost:3002/health",
    "test:load": "node scripts/test-load.js",
    "test:queue": "tsx scripts/test-queue.ts",
    "queue:stats": "tsx scripts/queue-stats.ts",
    "queue:stats:watch": "tsx scripts/queue-stats.ts --watch",
    "queue:clean": "tsx scripts/queue-clean.ts",
    "queue:clean:all": "tsx scripts/queue-clean.ts --all",
    "metrics": "curl -s http://localhost:3002/metrics | jq",
    "monitor": "bash scripts/monitor.sh"
  },
  "keywords": [
    "bullmq",
    "worker",
    "queue",
    "webhook",
    "background-jobs"
  ],
  "author": "Convex Team",
  "license": "MIT",
  "dependencies": {
    "@upstash/redis": "^1.34.3",
    "bullmq": "^5.63.0",
    "ioredis": "^5.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.17.9",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
