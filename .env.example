# ============================================================================
# REDIS (Upstash) - OBRIGATÓRIO
# ============================================================================
# URL da API REST do Upstash Redis
UPSTASH_REDIS_REST_URL=https://your-redis-name.upstash.io

# Token de autenticação do Upstash
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# ============================================================================
# DATABASE (PostgreSQL) - OBRIGATÓRIO
# ============================================================================
# Connection string do PostgreSQL
# Formato: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@host:5432/convex_production

# Direct URL (opcional, para conexões diretas sem pooling)
DIRECT_URL=postgresql://user:password@host:5432/convex_production

# ============================================================================
# WORKER CONFIG
# ============================================================================
# Ambiente de execução
NODE_ENV=production

# Porta do servidor HTTP (health checks)
PORT=3001

# Concorrência do worker (jobs simultâneos)
WORKER_CONCURRENCY=5

# Tempo de lock dos jobs em ms (deve ser > que o tempo máximo de processamento)
WORKER_LOCK_DURATION=120000

# ============================================================================
# APP CONFIG (para contexto de webhooks/notificações)
# ============================================================================
# URL base da aplicação principal (opcional)
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Secret para validação de webhooks (opcional)
WEBHOOK_SECRET=your_webhook_secret_here

# ============================================================================
# OBSERVABILITY (opcional)
# ============================================================================
# Nível de log (debug, info, warn, error)
LOG_LEVEL=info

# Sentry DSN para error tracking (opcional)
SENTRY_DSN=

# ============================================================================
# TIMEZONE
# ============================================================================
TZ=UTC
